<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RandomAnimalsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_random"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/star_border"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/ic_baseline_star_border_24"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/rv_random"
        app:layout_constraintTop_toTopOf="@+id/rv_random" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_baseline_star_24"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/star_border"
        app:layout_constraintEnd_toEndOf="@+id/star_border"
        app:layout_constraintStart_toStartOf="@+id/star_border"
        app:layout_constraintTop_toTopOf="@+id/star_border" />

</androidx.constraintlayout.widget.ConstraintLayout>